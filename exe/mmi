#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'

Bundler.require(:default)

if ENV['MMI_ENV']=='dev'
	Bundler.require(:development)
end

require_relative '../lib/mmi'

if ARGV.length>0
	file      = ARGV.shift
	content   = Psych.load_file(file)
	processor = Mmi::ModFileProcessor.new(content)
	
	action_param = ARGV.shift
	action       = action_param.nil? ? :install : action_param.to_sym
	
	case action
	when :install
		processor.install
	else
		STDERR.puts "Unknown action: #{action_param.inspect}."
		Kernel.exit 1
	end
else
	puts 'No file given.'
	Kernel.exit 1
end